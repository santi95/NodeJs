<div class="Full448">
  <div class="signIn">
    <div class="container2">
      <div class="cardTableDes">

        <div class="title">
          <h1>
            Iniciar Sesion
          </h1>
        </div>

        <form class="single-form" action="<%= submitPath %>" method="post">
          <% if (locals.error) { %>
          <div class="error">
            <%= error %>
          </div>
          <% } %>

          <div class="row">
            <input type="hidden" name="_method" value="put" />
            <label for="email">
              <span>e-mail</span>
              <input type="email" name="email" id="email" value="<%= locals.email %>" />
            </label>
          </div>

          <div class="row">
            <label for="password">
              <span>contrase√±a</span>
              <input type="password" name="password" id="password" />
            </label>
          </div>

          <div class="row content-center">
            <div class="actions">
              <button class="defaultButton">
                Iniciar Sesion
              </button>
            </div>

            <div>
              <a href='<%= registerPath %>'>
                <button class="defaultButton" type="button">
                  Registrarse
                </button>
              </a>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>