<% if (locals.errors) { %>
  <p class="errors">Debes corregir los siguientes errores antes de continuar:</p>
  <ul>
    <% Object.keys(errors).forEach(prop => { %>
      <li><%= prop %>: <%= errors[prop].message %></li>
    <% }) %>
  </ul>
<% } %>

<div class="row">
  <form action="<%= submitPath %>" method="post">
    <% if (!user.isNewRecord) { %>
    <input type="hidden" name="_method" value="patch" />
    <% } %>
    <label for="firstName">
      <span>Nombre</span>
      <input type="text" name="firstName" id="firstName" value="<%= user.firstName %>" />
      <% if (locals.errors && errors.firstName) { %>
        <span class="error"><%= errors.firstName.message %></span>
      <% } %>
    </label>
</div>

<div class="row">
  <label for="lastName">
    <span>Apellido</span>
    <input type="text" name="lastName" id="lastName" value="<%= user.lastName %>" />
    <% if (locals.errors && errors.lastName) { %>
      <span class="error"><%= errors.lastName.message %></span>
    <% } %>
  </label>
</div>

<div class="row">
  <label for="location">
    <span>Direcci√≥n</span>
    <input type="text" name="location" id="location" value="<%= user.location %>" />
    <% if (locals.errors && errors.message) { %>
      <span class="error"><%= errors.location.message %></span>
    <% } %>
  </label>
</div>

<div class="row">
  <label for="email">
    <span>Email</span>
    <input type="text" name="email" id="email" value="<%= user.email%>" />
    <% if (locals.errors && errors.email) { %>
      <span class="error"><%= errors.email.message %></span>
    <% } %>
  </label>

</div>
<div class="row">
  <label for="password">
    <span>Password</span>
    <input type="password" name="password" id="password" value="<%= user.password %>" />
    <% if (locals.errors && errors.password) { %>
      <span class="error"><%= errors.password.message %></span>
    <% } %>
  </label>
</div>

<div class="row">
  <div class="actions">
    <button class="defaultButton" onclick="<%= user.isNewRecord ? 'Crear' : 'Editar' %>">
      <%= user.isNewRecord ? 'Crear' : 'Editar' %>
    </button>
  </div>
</div>

</form>
</div>
</div>
